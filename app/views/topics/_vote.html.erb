<div class="vote">
  <div>
    <%= link_to '/' do %>
        <i class="fa fa-chevron-up" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class="score" data-score="<%= topic.score%>"><%= topic.up_votes.count - topic.down_votes.count %></div>
  <div>
    <%= link_to '/' do %>
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
    <% end %>
  </div>
</div>