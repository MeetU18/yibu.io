<% url = {} unless defined? url %>
<% url = url.merge(action: "create") %>
<%= form_for(topic, url: url) do |f| %>
    <div class="grid-x grid-padding-x">
      <div class="cell large-8">
        <div>
          <%= f.label :title, "标题" %>
          <%= f.text_field :title %>
          <%= f.hidden_field :format, value: :link %>
        </div>
        <div>
          <%= f.label :content, "链接" %>
          <%= f.text_field :content, placeholder: 'https://example.com' %>
        </div>
        <div>
          <%= f.label :tag_id, "分区" %>
          <%= f.select :tag_id, recommended_tags.map {|t| [t.name, t.id]}, prompt: '请选择' %>
        </div>
        <div class="button-group">
          <%= f.submit '发布', class: "button primary" %>
        </div>
      </div>
      <div class="cell large-4">
        <label>提示</label>
        有趣的内容会获得好的评价，尽量避免提交重复链接
      </div>
    </div>
<% end %>