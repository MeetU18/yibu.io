<div class="grid-container">
  <div class="callout">
    <h5><%= @topic.title %></h5>
    <p>
      <%= @topic.content %>
    </p>
    <div class="grid-x grid-margin-x">
      <div class="small-1 cell"><%= render 'vote', topic: @topic %></div>
      <div class="auto cell">
        <div class="grid-y">
          <div class="cell">&nbsp;</div>
          <div class="auto cell">
            <%= @topic.user.username %> <%= time_ago_in_words @topic.created_at %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
